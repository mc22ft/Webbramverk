


<div id='login'>
  <h2><span class="frontawesome-lock"></span>Sign In</h2>

  <fielset>
    <%= form_tag('/login', method: 'post') do %>

        <p><%= label_tag(:email, 'Email:') %></p>
        <p><%= text_field_tag(:email) %></p>

        <p><%= label_tag(:password, 'Password:') %></p>
        <p><%= text_field_tag(:password) %></p>

        <p><%= submit_tag('Log In') %></p>

    <% end %>
  </fielset>
</div>

<div>
  <%= link_to 'Register', new_user_path %>
</div>